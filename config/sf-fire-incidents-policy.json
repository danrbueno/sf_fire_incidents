{
	"Version": "2012-10-17",
	"Statement": [
		{
			"Effect": "Allow",
			"Action": [
				"s3:PutObject",
				"s3:GetObject",
				"s3:ListBucket",
				"s3:DeleteObject"
			],
			"Resource": [
				"arn:aws:s3:::<bucket_name>",
				"arn:aws:s3:::<bucket_name>/*",
				"arn:aws:s3:::aws-glue-assets-<account_id>-sa-east-1/scripts/<glue_job_name>.py"
			]
		},
		{
			"Effect": "Allow",
			"Action": "glue:*",
			"Resource": "*"
		},
		{
			"Effect": "Allow",
			"Action": [
				"logs:CreateLogGroup",
				"logs:CreateLogStream",
				"logs:PutLogEvents"
			],
			"Resource": "*"
		}
	]
}